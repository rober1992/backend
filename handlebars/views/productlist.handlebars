{{#if productExist}} 
    <table class="table table-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Imagen</th>
        </tr>
        <tbody>
				{{#each products}}
					<tr>
                        <td>{{this.id}}</td>
						<td>{{this.nombre}}</td>
						<td>{{this.precio}}</td>
						<td>
							<img
								style='width: 50px; height: auto'
								src='{{this.thumbnail}}'
								alt='products'
							/>
						</td>
					</tr>
				{{/each}}
		</tbody>
    </table>
{{else}}
    <div class='alert alert-info' role='alert'>
			No hay productos disponibles, agrega uno haciendo click <a href='/api' class='alert-link'>aqui</a>
	</div>
{{/if}}